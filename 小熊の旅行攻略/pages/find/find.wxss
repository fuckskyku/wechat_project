/* pages/find/find.wxss */
/*选项*/
.tab{
  display: flex;
  justify-content: space-between;
  padding: 18rpx 24rpx;
  padding-bottom: 20rpx;
  background: #49BAE0;
  align-items: center;
    
}
.tab text{
  width: 124rpx;
  height: 48rpx;
  text-align: center;
  line-height: 48rpx;
  background: skyblue;
  color: snow;
  font-size: 28rpx;
  border-radius: 80rpx;
}
.tab .icon{
  width: 14rpx;
  height: 22rpx;
  background-size: 9rpx 19rpx !important;

}
.tab .active{
  background: #fff;
  color: #49BAE0;
}
.view-box{
  width: 100%;
}
.view {
  margin-top: 12rpx;
}
.view .img{
  position: relative;
  width: 100%;
  height: 356rpx;
}
.view .img image{
  width: 100%;
  height: 100%;

}
.view .img text{
  position: absolute;
  display: block;
  width: 100%;
  height: 100%;
  text-align: center;
  line-height: 356rpx;
  font-size: 30rpx;
  color: #eeeeee;
  font-weight: bold;
  background: rgba(0,0,0,.6);
}
